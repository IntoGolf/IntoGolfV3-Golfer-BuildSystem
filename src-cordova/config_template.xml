<?xml version='1.0' encoding='utf-8'?>
<widget id="$APP_ID$" version="$APP_VERSION$" xmlns="http://www.w3.org/ns/widgets">
    <hook src="hooks/appBeforeBuild.js" type="before_build"/>
    <name>Golfer</name>
    <description>IntoGolf Golfer app</description>
    <author email="info@intogolf.nl" href="https://www.intogolf.com">
        IntoGolf Team
    </author>
    <content src="index.html"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <preference name="AllowNewWindows" value="true"/>
    <preference name="AllowsAirPlayForMediaPlayback" value="true"/>
    <preference name="AllowBackForwardNavigationGestures" value="true"/>
    <preference name="Allow3DTouchLinkPreview" value="true"/>
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="AndroidWindowSplashScreenAnimatedIcon" value="resources/android/splash/splash.png"/>
    <preference name="AutoHideSplashScreen" value="true"/>
    <preference name="SplashScreenDelay" value="3000"/>
    <preference name="StatusBarStyle" value="lightcontent"/>
    <preference name="Orientation" value="portrait"/>
    <platform name="android">
        <allow-intent href="market:*"/>
        <icon density="hdpi" src="resources/android/icon/drawable-hdpi-icon.png"/>
        <icon density="mdpi" src="resources/android/icon/drawable-mdpi-icon.png"/>
        <icon density="xhdpi" src="resources/android/icon/drawable-xhdpi-icon.png"/>
        <icon density="xxhdpi" src="resources/android/icon/drawable-xxhdpi-icon.png"/>
        <icon density="xxxhdpi" src="resources/android/icon/drawable-xxxhdpi-icon.png"/>
        <icon density="ldpi" src="resources/android/icon/drawable-ldpi-icon.png"/>
    </platform>
    <platform name="ios">
        <resource-file src="platforms/ios/GoogleService-Info.plist"/>
        <config-file parent="NSCameraUsageDescription" platform="ios" target="*-Info.plist">
            <string>We use your camera to update the user avatar.</string>
        </config-file>
        <config-file parent="NSPhotoLibraryAddUsageDescription" platform="ios" target="*-Info.plist">
            <string>We use your photo to update the user avatar.</string>
        </config-file>
        <config-file parent="NSPhotoLibraryUsageDescription" platform="ios" target="*-Info.plist">
            <string>We use your photo to update the user avatar.</string>
        </config-file>
        <config-file parent="NSLocationWhenInUseUsageDescription" platform="ios" target="*-Info.plist">
            <string>We use your location for full functionality of certain app features.</string>
        </config-file>
        <config-file parent="ITSAppUsesNonExemptEncryption" platform="ios" target="*-Info.plist">
            <false/>
        </config-file>
        <icon src="resources/ios/icon/icon.png" width="57" height="57"/>
